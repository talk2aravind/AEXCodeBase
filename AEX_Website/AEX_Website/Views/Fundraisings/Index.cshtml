@model IEnumerable<AEXApplication.Models.Fundraising>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @*<h2>Index</h2>*@
    <br/> 
    <p>
        Add Fundraiser Info
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-bordered table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AchievedTarget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileDiscription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubDivision.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.FirstName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AchievedTarget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfileDiscription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubDivision.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.FirstName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>
